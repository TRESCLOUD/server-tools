<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
	   	<record id="module_form_alter_install" model="ir.ui.view" >
			<field name="name">module.form.alter.install</field>
			<field name="model">ir.module.module</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="base.module_form"/>
			<field name="arch" type="xml">
				<xpath expr="//button[@name='button_immediate_install']" position="replace">
                	<button name="button_immediate_install_control" 
                		states="uninstalled" 
                		string="Install" 
                		type="object" 
                		class="btn btn-primary"/>
				</xpath>
				<xpath expr="//button[@name='button_uninstall']" position="replace">
                    <button name="button_immediate_uninstall_control" 
                    	states="installed" 
                    	string="Uninstall" 
                    	type="object"  
                    	class="btn btn-default"/>
				</xpath>
			</field>
		</record>

	   	<record id="module_kanban_alter_install" model="ir.ui.view" >
			<field name="name">module.kanban.alter.install</field>
			<field name="model">ir.module.module</field>
			<field name="type">kanban</field>
			<field name="inherit_id" ref="base.module_view_kanban"/>
			<field name="arch" type="xml">
				<xpath expr="//button[@name='button_immediate_install']" position="replace">
					<button type="object" class="btn btn-primary pull-right btn-sm" name="button_immediate_install_control" states="uninstalled">Install</button>
				</xpath>
			</field>
		</record>

    </data>
</odoo>
