<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_object_merge_form" model="ir.ui.view">
		<field name="name">view.object.merge.form</field>
	    <field name="model">object.merger</field>
	    <field name="arch" type="xml">
	    	<form string="Merge Entries">
	        	<group>
	            	<separator string="to_replace"/>
	         	</group>
	         	<footer>
	            	<button string="Merge Entries" name="action_merge" type="object" class="oe_highlight"/>
	             	or
	             	<button string="Cancel" class="oe_link" special="cancel"/>
	         	</footer>
			</form>
		</field>
	</record>

</odoo>
