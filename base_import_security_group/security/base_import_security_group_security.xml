<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- INICIO DEL CODIGO AGREGADO POR TRESCLOUD   -->
    <!-- Se agrega una nueva categoria para que los permisos de los modulos
     de exportacion(base_export_security) e
     importacion(base_import_security_group) la compartan-->
    <record id="category_import_export_csv_security" model="ir.module.category">
        <field name="name">Seguridad para importación / exportación</field>
    </record>
    <!-- FIN DEL CODIGO AGREGADO POR TRESCLOUD   -->
    <!-- GROUPS -->
    <record id="group_import_csv" model="res.groups">
        <field name="name">Import CSV/Excel files</field>
        <!-- INICIO DEL CODIGO MODIFICADO POR TRESCLOUD   -->
        <field name="category_id" ref="base_import_security_group.category_import_export_csv_security"/>
        <!-- FIN DEL CODIGO MODIFICADO POR TRESCLOUD   -->
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

</odoo>
